@page
@model KTLT.Pages.HoaDonNHModel
@{
    ViewData["Title"] = "Quản lý hóa đơn nhập hàng";
}


<h5 class="mt-3 text-danger">QUẢN LÝ HÓA ĐƠN NHẬP HÀNG</h5>

<div class="row mt-4">
    <div class="col-6">
        <a href="/TaoHoaDonNH" class="btn btn-primary">Tạo mới hóa đơn</a>
    </div>
</div>

<div class="row mt-4">
    <div class="col-6">
        <form method="post">
            <div class="input-group mb-3">
                <input type="text" name="keyword" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" placeholder="Tìm kiếm theo số hóa đơn">
                <input type="submit" class="input-group-text bg-dark text-light" id="inputGroup-sizing-default" value="Search" />
            </div>
        </form>
    </div>

    <div class="col-6">
        <form method="post">
            <div class="input-group mb-3">
                <input type="date" name="date" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" placeholder="Tìm kiếm theo ngày nhập">
                <input type="submit" class="input-group-text bg-dark text-light" id="inputGroup-sizing-default" value="Search" />
            </div>
        </form>
    </div>
</div>


<div class="mt-5">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Số HD</th>
                <th>Tên SP</th>
                <th>Mã sản phẩm</th>
                <th>Số lượng</th>
                <th>Ngày nhập</th>
                <th>Tùy chỉnh</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.dsHoaDonNH.HoaDon_arr != null)
            {
                for (int i = 0; i < Model.dsHoaDonNH.HoaDon_arr.Length; i++)
                {
                    if (Model.dsHoaDonNH.HoaDon_arr[i] != null)
                    {
                        if (Model.dsHoaDonNH.HoaDon_arr[i].DsSp != null)
                        {
                            for (int i2 = 0; i2 < Model.dsHoaDonNH.HoaDon_arr[i].DsSp.DsSp.Length; i2++)
                            {
                                <tr>
                                    <td>@Model.dsHoaDonNH.HoaDon_arr[i].SoHD</td>
                                    <td>@Model.dsHoaDonNH.HoaDon_arr[i].DsSp.DsSp[i2].Tensp</td>
                                    <td>@Model.dsHoaDonNH.HoaDon_arr[i].DsSp.DsSp[i2].Masp</td>
                                    <td>@Model.dsHoaDonNH.HoaDon_arr[i].DsSp.DsSp[i2].TonKho.SLNhap</td>
                                    <td>@Model.dsHoaDonNH.HoaDon_arr[i].NgayHD.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <a href="/SuaHoaDonNH?id=@Model.dsHoaDonNH.HoaDon_arr[i].SoHD" class="btn btn-warning"><i class="fa-solid fa-pen-to-square"></i> EDIT</a>
                                        <a href="/HoaDonNH?act=delete&id=@Model.dsHoaDonNH.HoaDon_arr[i].SoHD" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i> DELETE</a>
                                    </td>
                                </tr>

                            }

                        }

                    }



                }

            }
</table>