@page
@model KTLT.Pages.TaoHoaDonNHModel
@{
    ViewData["Title"] = "Tạo hóa đơn nhập hàng";
}

<h5 class="mt-5 text-danger">THÊM HÓA ĐƠN NHẬP HÀNG</h5>


<form method="post" class="mt-5">
    <div class="row mb-2">
        <label class="col-sm-2 col-form-label">Số hóa đơn</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" id="inputEmail3" name="shd" required>
        </div>
    </div>
    <div class="row mb-2">
        <label class="col-sm-2 col-form-label">Sản phẩm</label>
        <div class="col-sm-5">
            <select id="inputState" class="form-select" name="masp1">
                <option value="" selected disabled>Chọn sản phẩm</option>
                @for (int i = 0; i < Model.dsSanpham.DsSp.Length; i++)
                {
                    <option value="@Model.dsSanpham.DsSp[i].Masp">@Model.dsSanpham.DsSp[i].Masp  ||  @Model.dsSanpham.DsSp[i].Tensp</option>
                }
            </select>
        </div>
    </div>
    <div class="row mb-2">
        <label class="col-sm-2 col-form-label">Số lượng</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" id="inputEmail3" name="sl1" required>
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Thêm hóa đơn</button>
</form>




