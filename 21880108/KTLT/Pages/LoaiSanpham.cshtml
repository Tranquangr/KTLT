@page
@model KTLT.Pages.LoaiSanphamModel
@{
    ViewData["Title"] = "Quản lý loại sản phẩm";
}

<h5 class="mt-3 text-danger">QUẢN LÝ LOẠI SẢN PHẨM</h5>

<div class="row mt-4">
    <div class="col-6">
        <form method="post">
            <div class="input-group mb-3">
                <input type="text" name="keyword" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" placeholder="Tìm kiếm theo mã loại sản phẩm">
                <input type="submit" class="input-group-text bg-dark text-light" id="inputGroup-sizing-default" value="Search" />
            </div>
        </form>

    </div>
    <div class="col-6">
        <a href="/ThemLoai" class="btn btn-primary">Tạo mới loại sản phẩm</a>
    </div>
</div>

<div class="mt-5">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Mã</th>
                <th scope="col">Tên</th>
                <th scope="col">Tùy chọn</th>
                
            </tr>
        </thead>
        <tbody>
            @if (Model.dsloai != null)
            {
                if (Model.dsloai.dsloai != null)
                {
                    for (int i = 0; i < Model.dsloai.dsloai.Length; i++)
                    {
                        if (Model.dsloai.dsloai[i] != null)
                        {
                            <tr>
                                <td>@Model.dsloai.dsloai[i].MaChungLoai</td>
                                <td>@Model.dsloai.dsloai[i].TenChungLoai</td>
                                <td>

                                    <a href="/SuaLoaiSanpham?code=@Model.dsloai.dsloai[i].MaChungLoai" class="btn btn-warning"><i class="fa-solid fa-pen-to-square"></i> EDIT</a>
                                    <a href="/LoaiSanpham?action=delete&code=@Model.dsloai.dsloai[i].MaChungLoai" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i> DELETE</a>
                                </td>
                            </tr>
                        }

                    }
                }
            }
        </tbody>
    </table>
</div>
