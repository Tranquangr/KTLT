<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - KTLT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-info">
            <div class="container">
                <img src="https://jasminevn.net/image/catalog/iconmenu/home.png" alt="Girl in a jacket" width="30" height="30">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav flex-w">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" asp-area="" asp-page="/Sanpham">QL sản phẩm</a>
                        </li>
                        <li class="nav-item item-nav">
                            <a class="nav-link" asp-area="" asp-page="/LoaiSanpham">QL chủng loại</a>
                        </li>
                        <li class="nav-item item-nav">
                            <a class="nav-link" asp-area="" asp-page="/HoaDonBH">QL hóa đơn bán hàng</a>
                        </li>
                        <li class="nav-item item-nav">
                            <a class="nav-link" asp-area="" asp-page="/HoaDonNH">QL Hóa đơn nhập hàng</a>
                        </li>
                        <li class="nav-item item-nav">
                            <a class="nav-link" asp-area="" asp-page="/TKTonKho">TK tồn kho</a>
                        </li>
                        <li class="nav-item item-nav">
                            <a class="nav-link" asp-area="" asp-page="/TKHetHanSD">TK hết HSD</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
       
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
