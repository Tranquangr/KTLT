@page
@model KTLT.Pages.SuasanphamModel
@{
    ViewData["Title"] = "Sửa sản phẩm";
}
<h5 class="mt-5 text-danger">CHỈNH SỬA SẢN PHẨM</h5>

<form method="post">
    <div class="row mb-2">
        <label class="col-sm-2 col-form-label">Mã sản phẩm</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" id="inputEmail3" name="masp" value="@Model.sanpham.Masp" readonly>
        </div>
    </div>
    <div class="row mb-2">
        <label class="col-sm-2 col-form-label">Tên sản phẩm</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" id="inputPassword3" name="tensp" value="@Model.sanpham.Tensp">
        </div>
    </div>
    <div class="row mb-2">
        <label class="col-sm-2 col-form-label">Hạn sử dụng</label>
        <div class="col-sm-5">
            <input type="date" class="form-control" id="inputPassword3" name="hsd" value="@Model.sanpham.HSD.ToString("yyyy-MM-dd")" required="required">
        </div>
    </div>
    <div class="row mb-2">
        <label class="col-sm-2 col-form-label">Nhà sản xuất</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" id="inputPassword3" name="nhasx" value="@Model.sanpham.NhaSx">
        </div>
    </div>
    <div class="row mb-2">
        <label class="col-sm-2 col-form-label">Ngày sản xuất</label>
        <div class="col-sm-5">
            <input type="date" class="form-control" id="inputPassword3" name="nsx" value="@Model.sanpham.NgaySx.ToString("yyyy-MM-dd")" required="required">
        </div>
    </div>
    <div class="row mb-2">
        <label class="col-sm-2 col-form-label">Loại hàng</label>
        <div class="col-sm-5">
            <select id="inputState" class="form-select" name="lsp">
                <option value="@Model.sanpham.LoaiSp.MaChungLoai">@Model.sanpham.LoaiSp.TenChungLoai</option>
                @if (Model.dsChungLoai.dsloai != null)
                {
                    @for (int i = 0; i < Model.dsChungLoai.dsloai.Length; i++)
                    {
                        if (@Model.dsChungLoai.dsloai[i].MaChungLoai != @Model.sanpham.LoaiSp.MaChungLoai)
                        {
                            <option value="@Model.dsChungLoai.dsloai[i].MaChungLoai">@Model.dsChungLoai.dsloai[i].TenChungLoai</option>
                        }
                    }
                }
            </select>
        </div>
    </div>
    <div class="row mb-2">
        <label class="col-sm-2 col-form-label">Giá</label>
        <div class="col-sm-5">
            <input type="number" class="form-control" id="inputPassword3" name="gia" value="@Model.sanpham.gia">
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Sửa sản phẩm</button>
</form>

